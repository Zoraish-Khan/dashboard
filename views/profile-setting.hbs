<div class="row">
    <div class="col-12">
        <div class="page-title-wrap d-sm-flex align-items-center justify-content-between">
            <h4 class="mb-sm-0">Profile Settings</h4>

            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="javascript: void(0);">Profile</a></li>
                    <li class="breadcrumb-item active">Profile Settings</li>
                </ol>
            </div>

        </div>
    </div>
</div>
<div class="row">
    <div class="col-xl-4">
        <div class="card">
            <div class="card-header bg-transparent">
                <h5 class="card-title mb-0">Edit Password</h5>
            </div>
            <div class="card-body">
                <div class="text-center mb-5">
                    <div class="mb-3">
                        <a class="" href="profile.html">
                            <img alt="avatar" src="/img/image-john.jpg" class="avatar-lg rounded-circle">
                        </a>
                    </div>
                    <div class="d-flex flex-column">
                        <a href="profile.html">
                            <h5 class="mb-1 text-dark fw-semibold">John Doe</h5>
                        </a>
                        <p class="text-muted mt-0 mb-0 pt-0 fs-13">Web Designer</p>
                    </div>
                </div>
                <div class="form-group mb-3">
                    <label class="form-label">Current Password</label>
                    <div class="input-group" id="Password-toggle">
                        <input class="form-control" type="password" placeholder="Current Password"
                            autocomplete="current-password">
                        <a href="javascript:void(0)" class="input-group-text">
                            <i class="bi-eye text-muted" aria-hidden="true"></i>
                        </a>
                    </div>
                </div>
                <div class="form-group mb-3">
                    <label class="form-label">New Password</label>
                    <div class="input-group" id="Password-toggle1">
                        <input class="form-control" type="password" placeholder="New Password"
                            autocomplete="new-password">
                        <a href="javascript:void(0)" class="input-group-text">
                            <i class="bi-eye text-muted" aria-hidden="true"></i>
                        </a>
                    </div>
                </div>
                <div class="form-group mb-3">
                    <label class="form-label">Confirm Password</label>
                    <div class="input-group" id="Password-toggle2">
                        <input class="form-control" type="password" placeholder="Confirm Password"
                            autocomplete="new-password">
                        <a href="javascript:void(0)" class="input-group-text">
                            <i class="bi-eye text-muted" aria-hidden="true"></i>
                        </a>
                    </div>
                </div>
            </div>
            <div class="form-group mb-3 px-3 text-end">
                <a href="javascript:void(0)" class="btn btn-primary">Update</a>
                <a href="javascript:void(0)" class="btn btn-danger">Cancel</a>
            </div>
        </div>
    </div>
    <div class="col-xl-8">
        <div class="card">
            <div class="card-header bg-transparent">
                <h5 class="card-title mb-0">Edit Profile</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-lg-6 col-md-12">
                        <div class="form-group mb-3">
                            <label for="Inputname">First Name</label>
                            <input type="text" class="form-control" id="Inputname" placeholder="First Name">
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-12">
                        <div class="form-group mb-3">
                            <label for="Inputname1">Last Name</label>
                            <input type="text" class="form-control" id="Inputname1" placeholder="Enter Last Name">
                        </div>
                    </div>
                </div>
                <div class="form-group mb-3">
                    <label for="InputEmail1">Email address</label>
                    <input type="email" class="form-control" id="InputEmail1" placeholder="Email address">
                </div>
                <div class="form-group mb-3">
                    <label for="Inputnumber">Contact Number</label>
                    <input type="number" class="form-control" id="Inputnumber" placeholder="Contact number">
                </div>
                <div class="form-group mb-3">
                    <label class="form-label">About Me</label>
                    <textarea class="form-control" rows="6" placeholder="My bio..."></textarea>
                </div>
                <div class="form-group mb-3">
                    <label class="form-label">Website</label>
                    <input class="form-control" placeholder="https://unsplash.com">
                </div>
                <div class="form-group mb-3">
                    <label class="form-label">Date Of Birth</label>
                    <input type="date" class="form-control">
                </div>
                <div class="form-group mb-3 text-end">
                    <a href="javascript:void(0)" class="btn btn-success my-1">Save</a>
                    <a href="javascript:void(0)" class="btn btn-danger my-1">Cancel</a>
                </div>
            </div>
        </div>
    </div>
</div>
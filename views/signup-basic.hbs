<div class="auth-bg">

    <div class="container-fluid h-100">
        <div class="row flex-grow-1 justify-content-center align-items-center pt-5">
            <div class="col-xl-4 col-lg-5">
                <div class="card">

                    <!-- Logo -->
                    <div class="card-header pt-4 pb-4 text-center bg-light">
                        <a href="/">
                            <span><img src="/img/logo-dark-lg.png" alt="" height="40"></span>
                        </a>
                    </div>

                    <div class="card-body p-4">

                        <div class="text-center px-4 m-auto">
                            <h4 class="text-heading text-center pb-0 fw-bold">Create an Account</h4>
                            <p class="text-muted mb-4">Don't have an account? Create your account, it takes less than a
                                minute</p>
                        </div>

                        <form action="#">

                            <div class="mb-3">
                                <label class="form-label">Email address</label>
                                <input class="form-control" type="email" required="" placeholder="Enter your email">
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Name</label>
                                <input class="form-control" type="text" required="" placeholder="Enter yor name">
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Password</label>
                                <div class="input-group input-group-merge">
                                    <input type="password" class="form-control" placeholder="Enter your password">
                                    <div class="input-group-text">
                                        <span class="bi-eye"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="mb-3 mb-3">
                                <div class="form-check">
                                    <input type="checkbox" class="form-check-input" id="checkbox-signup" checked="">
                                    <label class="form-check-label" for="checkbox-signup">I accept terms and
                                        conditions</label>
                                </div>
                            </div>

                            <div class="mb-3 mb-0 text-center">
                                <button class="btn btn-primary" type="submit"> Log In </button>
                            </div>

                        </form>
                    </div>
                </div>

                <div class="row mt-3">
                    <div class="col-12 text-center">
                        <p class="text-muted">Already have an account? <a href="pages-register.html"
                                class="text-muted ms-1"><b>Sign In</b></a></p>
                    </div>
                </div>

            </div>
        </div>
    </div>

    <div class="customizer-setting d-none d-md-block">
        <div class="btn-info rounded-circle shadow-lg btn btn-icon btn-lg p-2" data-bs-toggle="offcanvas"
            data-bs-target="#theme-settings-offcanvas" aria-controls="theme-settings-offcanvas">
            <i class='spinner bi-gear fs-22'></i>
        </div>
    </div>
</div>
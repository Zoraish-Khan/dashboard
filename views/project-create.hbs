<div class="row mb-2">
    <div class="col-md-6">
        <div class="mb-3">
            <a href="create-project.html" class="btn btn-success"><i class="bi-plus me-2"></i>Create Project</a>
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-inline float-md-end mb-3">
            <div class="search-box ms-2">
                <div class="position-relative">
                    <input type="text" class="form-control rounded border-0" placeholder="Search...">
                </div>
            </div>

        </div>
    </div>


